@model JsoftProject.Models.NewSaleModel

@{
    ViewBag.Title = "viewInvoice";
}

<h2>Invoice</h2>

<style>
    .btn {
        /* background-color: blue !important;*/
        background-color: #337ab7;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn:hover {
            color: purple;
            font-size: large;
            background-color: cornflowerblue;
        }

    .myclass {
        width: 19.666667%;
    }

    .line {
        margin-top: 39px;
        margin-bottom: 14px;
    }
</style>

<!-- CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<!-- JavaScript (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


<div style="width: 100%;">
    <div style="width: 45%; height: 100px; float: left;">

        <div class="form-group">
            @Html.LabelFor(model => model.trnSale.VoucherNo, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">

                <p>@Html.DisplayFor(model => model.trnSale.VoucherNo)</p>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.trnSale.VoucherDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <p>@string.Format("{0:dd-MM-yyyy}", Model.trnSale.VoucherDate)</p>

            </div>
        </div>
    </div>


    <div style="margin-left: 50%; height: 100px;">

     

        <div class="form-group right">
            <div class="form-group" style="padding-left:77px;">
                @Html.LabelFor(model => model.trnSale.mstAccount.AccountName, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-1" style="margin-left: -44px; display:block;">
                    <p>@Html.DisplayFor(model => model.trnSale.mstAccount.AccountName)</p>
                </div>

            </div>
            <br />
            <br />

            <div class="form-group">
                @Html.LabelFor(model => model.trnSale.SalesType, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-left:76px;" })
                <div class="col-md-10" style="width: 60%;">

                    @{
                        string a = Model.trnSale.SalesType.ToString();

                        if (a == "SLS")
                        {
                            <p>Sales</p>
                        }
                        else if (a == "SLSR")
                        {
                            <p>Sales Return</p>
                        }
                    }



                </div>
            </div>

            <div class="form-group" style="padding-left:77px;">
                @Html.LabelFor(model => model.trnSale.InvoiceType, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-1" style="margin-left: -44px;">
                    @Html.DisplayFor(model => model.trnSale.InvoiceType)
                </div>
            </div>
        </div>
    </div>
</div>

<hr style="border: 1px solid black;">

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Tax
                </th>
                <th>
                    Pieces
                </th>
                
                <th>
                    Gross Weight
                </th>
                <th>
                    Net Weight
                </th>

                <th>
                    Rate
                </th>
                <th>
                    Amount
                </th>
                <th>
                    SGST Percentage
                </th>
                <th>
                    SGST Amount
                </th>
                <th>
                    CGST Percentage
                </th>
                <th>
                    CGST Amount
                </th>
                <th>
                    IGST Percentage
                </th>
                <th>
                    IGST Amount
                </th>
                <th>
                    Total Amount
                </th>

            </tr>

            @foreach (var item in Model.trnSaleItems)
            {
                <tr>
                    <td>
                        @item.mstItem.ItemName
                    </td>

                    <td>
                        @item.mstTax.TaxName
                    </td>

                    <td>
                        @item.Pcs
                    </td>

                    
                    <td>
                        @item.GrossWt
                    </td>

                    <td>
                        @item.NetWt
                    </td>

                    <td>
                        @item.Rate
                    </td>

                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.SGSTPrc
                    </td>

                    <td>
                        @item.SGSTAmount
                    </td>

                    <td>
                        @item.CGSTPrc
                    </td>

                    <td>
                        @item.CGSTAmount
                    </td>
                    <td>
                        @item.IGSTPrc
                    </td>

                    <td>
                        @item.IGSTAmount
                    </td>
                    <td>
                        @item.TotalAmt
                    </td>

                </tr>
            }



        </table>
    </div>
</div>

